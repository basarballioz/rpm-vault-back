{
  "name": "rpmvault-backend",
  "version": "1.0.0",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "dev": "nodemon server.js",
    "docs": "echo Docs: http://localhost:${PORT:-3001}/docs && echo OpenAPI: http://localhost:${PORT:-3001}/openapi.json",
    "open:docs": "node -e \"const u='http://localhost:'+(process.env.PORT||3001)+'/docs'; console.log('Opening', u); const {spawn}=require('child_process'); const cmd=process.platform==='darwin'?'open':process.platform==='win32'?'start':'xdg-open'; spawn(cmd,[u],{stdio:'ignore',detached:true}).unref();\"",
    "open:openapi": "node -e \"const u='http://localhost:'+(process.env.PORT||3001)+'/openapi.json'; console.log('Opening', u); const {spawn}=require('child_process'); const cmd=process.platform==='darwin'?'open':process.platform==='win32'?'start':'xdg-open'; spawn(cmd,[u],{stdio:'ignore',detached:true}).unref();\"",
    "check:env": "node -e \"['MONGO_URI','CORS_ORIGINS'].forEach(k=>console.log(k+':',process.env[k]?'OK':'MISSING'));\"",
    "vercel:dev": "npx --yes vercel dev --port 3000",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "motorcycle",
    "maintenance",
    "repair"
  ],
  "author": "",
  "license": "ISC",
  "description": "Backend API for RPMVault motorcycle maintenance tracking system",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^1.6.0",
    "express-validator": "^7.0.0",
    "firebase-admin": "^13.6.1",
    "fs": "^0.0.1-security",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "json2csv": "^6.0.0-alpha.2",
    "mongodb": "^6.20.0",
    "morgan": "^1.10.0",
    "pino": "^9.11.0",
    "pino-http": "^10.5.0",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "nodemon": "^3.0.1",
    "pino-pretty": "^13.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
